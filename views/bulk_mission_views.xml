<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Bulk Mission Wizard Form View -->
    <record id="view_bulk_mission_wizard_form" model="ir.ui.view">
        <field name="name">bulk.mission.wizard.form</field>
        <field name="model">bulk.mission.wizard</field>
        <field name="arch" type="xml">
            <form string="Bulk Mission Creation">
                <header>
                    <!-- Save button -->
                    <button string="Save" class="btn-primary" special="save"/>
                    
                    <!-- AI Results buttons -->
                    <button name="create_missions_from_ai_results" 
                            string="Create All Missions" 
                            type="object" 
                            class="btn-success" 
                            attrs="{'invisible': [('ai_optimization_result', '=', False)]}"/>
                            
                    <!-- Cancel button -->
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </header>
                
                <!-- Main Widget Container -->
                <div class="o_form_sheet_bg">
                    <div class="tm_mission_form">
                        <widget name="bulk_mission_widget"/>
                    </div>
                </div>
                
                <!-- Hidden fields for the widget -->
                <div class="oe_hide" invisible="1">
                    <field name="name"/>
                    <field name="mission_date"/>
                    <field name="ai_optimization_result"/>
                    <field name="driver_id"/>
                    <field name="vehicle_id"/>
                    <field name="priority"/>
                    <field name="auto_optimize_routes"/>
                    <field name="create_confirmed"/>
                    <field name="mission_templates"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Bulk Mission Preview Tree View -->
    <record id="view_bulk_mission_preview_tree" model="ir.ui.view">
        <field name="name">bulk.mission.preview.tree</field>
        <field name="model">bulk.mission.preview</field>
        <field name="arch" type="xml">
            <tree string="Mission Preview" create="false" edit="false" delete="false">
                <field name="mission_number" string="Mission #"/>
                <field name="source" string="Source Location"/>
                <field name="destination_count" string="Destinations"/>
                <field name="total_weight" string="Total Weight (kg)"/>
                <field name="driver" string="Driver"/>
                <field name="vehicle" string="Vehicle"/>
            </tree>
        </field>
    </record>

    <!-- Action for Bulk Mission Creation -->
    <record id="action_bulk_mission_wizard" model="ir.actions.act_window">
        <field name="name">Bulk Mission Creation</field>
        <field name="res_model">bulk.mission.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">current</field>
        <field name="context">{}</field>
    </record>

    <!-- Menu Item for Bulk Mission Creation -->
    <menuitem id="menu_bulk_mission_creation"
              name="Bulk Mission Creation"
              parent="menu_transport_root"
              action="action_bulk_mission_wizard"
              sequence="12"/>

</odoo>