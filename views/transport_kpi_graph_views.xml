<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Graph views to complement dashboard: costs over time, distance over time -->
    <record id="view_transport_mission_graph_cost" model="ir.ui.view">
        <field name="name">transport.mission.graph.cost</field>
        <field name="model">transport.mission</field>
        <field name="arch" type="xml">
            <graph string="Cost Over Time" type="bar">
                <field name="mission_date" type="row" interval="month"/>
                <field name="total_cost" type="measure"/>
            </graph>
        </field>
    </record>

    <record id="action_transport_mission_graph_cost" model="ir.actions.act_window">
        <field name="name">Cost Over Time</field>
        <field name="res_model">transport.mission</field>
        <field name="view_mode">graph</field>
        <field name="view_id" ref="view_transport_mission_graph_cost"/>
        <field name="context">{"search_default_group_by_mission_date":1}</field>
    </record>

    <record id="view_transport_mission_graph_distance" model="ir.ui.view">
        <field name="name">transport.mission.graph.distance</field>
        <field name="model">transport.mission</field>
        <field name="arch" type="xml">
            <graph string="Distance Over Time" type="bar">
                <field name="mission_date" type="row" interval="month"/>
                <field name="total_distance_km" type="measure"/>
            </graph>
        </field>
    </record>

    <record id="action_transport_mission_graph_distance" model="ir.actions.act_window">
        <field name="name">Distance Over Time</field>
        <field name="res_model">transport.mission</field>
        <field name="view_mode">graph</field>
        <field name="view_id" ref="view_transport_mission_graph_distance"/>
        <field name="context">{"search_default_group_by_mission_date":1}</field>
    </record>

</odoo>


