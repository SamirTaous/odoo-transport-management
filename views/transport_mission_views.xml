<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- FORM VIEW FOR TRANSPORT DESTINATION (This will open in a modal) -->
    <record id="view_transport_destination_form" model="ir.ui.view">
        <field name="name">transport.destination.form</field>
        <field name="model">transport.destination</field>
        <field name="arch" type="xml">
            <form string="Destination">
                <sheet>
                    <group>
                        <!-- The location field now uses our custom widget -->
                        <field name="location" widget="map_selector"/>
                        <!-- The coordinate fields are hidden but present for the widget to work -->
                        <field name="latitude" invisible="1"/>
                        <field name="longitude" invisible="1"/>
                    </group>
                    <group>
                        <field name="is_completed" string="Mark as Completed"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- FORM VIEW FOR TRANSPORT MISSION (MODIFIED TO FIX THE ISSUE) -->
    <record id="view_transport_mission_form" model="ir.ui.view">
        <field name="name">transport.mission.form</field>
        <field name="model">transport.mission</field>
        <field name="arch" type="xml">
            <form string="Transport Mission">
                <header>
                    <button name="action_confirm" string="Confirm" type="object" class="btn-primary" data-hotkey="v" attrs="{'invisible': [('state', '!=', 'draft')]}"/>
                    <button name="action_start_mission" string="Start Mission" type="object" class="btn-primary" data-hotkey="s" attrs="{'invisible': [('state', '!=', 'confirmed')]}"/>
                    <button name="action_done" string="Mark as Done" type="object" class="btn-primary" data-hotkey="d" attrs="{'invisible': [('state', '!=', 'in_progress')]}"/>
                    <button name="action_cancel" string="Cancel" type="object" data-hotkey="z" attrs="{'invisible': [('state', 'not in', ('draft', 'confirmed', 'in_progress'))]}"/>
                    <button name="action_reset_to_draft" string="Reset to Draft" type="object" data-hotkey="b" attrs="{'invisible': [('state', '!=', 'cancelled')]}"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,confirmed,in_progress,done"/>
                </header>
                <sheet class="tm_form_sheet">
                    <div class="oe_title">
                        <h1><field name="name" readonly="1"/></h1>
                        <field name="priority" widget="radio" options="{'horizontal': true}"/>
                    </div>
                    <group>
                        <group>
                            <field name="mission_date"/>
                            <field name="driver_id" widget="many2one_avatar" options="{'no_open': True}"/>
                        </group>
                        <group>
                            <field name="vehicle_id" options="{'no_open': True}"/>
                            <field name="source_location"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Destinations" name="destinations">
                            <label for="destination_progress"/>
                            <field name="destination_progress" widget="progressbar" nolabel="1"/>

                            <!-- *** CORE FIX HERE *** -->
                            <!-- Removed 'editable="bottom"' from the tree view. -->
                            <!-- Now, clicking "Add a line" will open the 'view_transport_destination_form' in a modal. -->
                            <field name="destination_ids" class="mt-2">
                                <tree>
                                    <field name="sequence" widget="handle"/>
                                    <field name="location"/>
                                    <field name="is_completed" string="Done?"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Operational Notes" name="notes">
                            <field name="notes" placeholder="Add internal notes for the mission..."/>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- KANBAN VIEW (No changes) -->
    <record id="view_transport_mission_kanban" model="ir.ui.view">
        <field name="name">transport.mission.kanban</field>
        <field name="model">transport.mission</field>
        <field name="arch" type="xml">
            <kanban class="o_transport_management" default_order="priority desc, mission_date desc">
                <field name="name"/>
                <field name="mission_date"/>
                <field name="driver_id"/>
                <field name="vehicle_id"/>
                <field name="state"/>
                <field name="priority"/>
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_global_click tm-kanban-card tm-card-state-{{record.state.raw_value}}">
                            <div class="tm_kanban_header">
                                <h6><field name="name"/></h6>
                                <field name="state" widget="badge" decoration-success="state == 'done'" decoration-info="state in ('confirmed', 'in_progress')" decoration-muted="state == 'cancelled'"/>
                            </div>
                            <div class="tm_kanban_body">
                                <div class="tm_kanban_row"><i class="fa fa-calendar me-2"/><span><field name="mission_date"/></span></div>
                                <div class="tm_kanban_row"><i class="fa fa-user me-2"/><span><field name="driver_id"/></span></div>
                                <div class="tm_kanban_row"><i class="fa fa-truck me-2"/><span><field name="vehicle_id"/></span></div>
                                <field name="priority" widget="priority"/>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- TREE VIEW (No changes) -->
    <record id="view_transport_mission_tree" model="ir.ui.view">
        <field name="name">transport.mission.tree</field>
        <field name="model">transport.mission</field>
        <field name="arch" type="xml">
            <tree decoration-success="state == 'done'" decoration-muted="state == 'cancelled'" decoration-bf="priority == '1'">
                <field name="name"/>
                <field name="mission_date"/>
                <field name="driver_id" widget="many2one_avatar"/>
                <field name="vehicle_id"/>
                <field name="source_location"/>
                <field name="priority" widget="priority"/>
                <field name="state" widget="badge" decoration-success="state == 'done'" decoration-info="state in ('confirmed', 'in_progress')"/>
            </tree>
        </field>
    </record>

    <!-- ACTION WINDOW (No changes) -->
    <record id="action_transport_mission" model="ir.actions.act_window">
        <field name="name">Transport Missions</field>
        <field name="res_model">transport.mission</field>
        <field name="view_mode">kanban,tree,form</field>
    </record>
</odoo>

